<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/brown_superlight"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/news_background"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/head"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/string"
        android:textColor="@color/brown_dark"
        android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="6dp"
        android:text="@string/string"
        android:paddingTop="12dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/number"
        android:text="@string/string"
        android:paddingBottom="12dp"
        android:paddingTop="6dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:hint="Meno lektora"
        android:autofillHints="Meno lektora"
        android:inputType="text"
        android:textColor="@color/brown_superdark"
        android:padding="8dp"
        android:background="@drawable/custom_edit_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/negative"
            android:layout_marginRight="4dp"
            android:text="@string/material_calendar_negative_button"/>

        <Button
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/positive"
            android:text="@string/material_calendar_positive_button"/>

    </LinearLayout>

</LinearLayout>